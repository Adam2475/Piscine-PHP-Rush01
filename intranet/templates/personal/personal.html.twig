{%extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Profile{% endblock %}

{% block body %}


<div class="header">
    {% include 'components/searchbar.html.twig' %}
    <div class="user-dropdown">
        <button><a href="/profile/edit">edit profile</a></button>
        {% if user.role is defined and user.role and user.role.value == 'admin' %}
            <button><a href="/admin"> admin </a></button>
        {% else %}
            <button><a href="/userpage/{{user.id}}"> admin </a></button>
        {% endif %}
    </div>

    <button><a href="{{ path('app_logout') }}" class="btn btn-secondary">Logout</a></button>
</div>


{% include 'components/navbar.html.twig' %}

<div class="main_profile">
    <div class="user_info">
    {% if user.image %}
        <img src="{{ user.image }}" alt="Profile Image" style="max-width:150px;">
    {% endif %}
        <div class="pick_and_name">
            <h2 class="user_name">
            {{ user.getFirstName() }}
            {{ user.getLastName() }}
            </h2>
        </div>
        <div class="info">
            <ul>
                <li>Email: {{ user.getEmail() }}</li>
            </ul>
        </div>
    </div>
    <div class="agenda">
        <h2>Event</h2>
        <ul>
            {% for event in events %}
                    <li>
                        <p>{{ event.getName() }}</p>
                        <h3>{{ event.getTitle() }}</h3>
                        <div class="participant">
                            {{ event.getParticipants() }}/{{ event.getMaxParticipants() }}
                        </div>
                        <div class="event_info">
                            <p>{{ event.getDate()|date('d-m-Y') }}</p>
                            <p>{{ event.getStartTime()|date('H:i') }}</p>
                            <p>{{ event.getEndTime()|date('H:i') }}</p>
                        </div>
                    {% if event.registered == true %}
                        <button><a href="{{ path('userpage_event_registration', { id: event.id }) }}">REGISTERED</a></button>
                    {% else %}
                        <button><a href="{{ path('userpage_event_deregistration', { id: event.id }) }}">NOT REGISTERED</a></button>
                    {% endif %}
                    </li>

            {% endfor %}
        </ul>
    </div>
