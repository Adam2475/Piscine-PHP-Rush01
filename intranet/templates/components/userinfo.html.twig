<div class="user_info">

    {% if user.image %}
        <img class="profile_img" src="{{ user.image }}" alt="Profile Image" style="max-width:150px;">
    {% endif %}
        <div class="pick_and_name">
            <h2 class="user_name">
            {{ user.getFirstName() }}
            {{ user.getLastName() }}
            </h2>
        </div>
    <div class="info">
        <ul>
            <li>Email: {{ user.getEmail() }}</li>
        </ul>
    </div>

</div>